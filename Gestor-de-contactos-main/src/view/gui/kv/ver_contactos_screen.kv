<VerContactosScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10

        Label:
            text: "Contactos"
            font_size: 24
            size_hint_y: None
            height: 40

        TextInput:
            id: filtro_nombre
            hint_text: "Filtrar por nombre"
            size_hint_y: None
            height: 40
            opacity: 1 if not root.modo_edicion else 0
            disabled: root.modo_edicion

        TextInput:
            id: filtro_telefono
            hint_text: "Filtrar por tel√©fono"
            size_hint_y: None
            height: 40
            opacity: 1 if not root.modo_edicion else 0
            disabled: root.modo_edicion

        Spinner:
            id: filtro_tipo
            text: "Tipo"
            values: ["", "personal", "profesional"]
            size_hint_y: None
            height: 40
            opacity: 1 if not root.modo_edicion else 0
            disabled: root.modo_edicion

        Button:
            text: "Filtrar"
            size_hint_y: None
            height: 40
            opacity: 1 if not root.modo_edicion else 0
            disabled: root.modo_edicion
            on_release: root.filtrar_contactos()

        ScrollView:
            GridLayout:
                id: lista_contactos
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10

        Button:
            text: "Volver"
            size_hint_y: None
            height: 40
            on_release:
                root.modo_edicion = False
                root.manager.current = "usuario_screen"
